<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/btn_white"
    android:padding="16dp">

    <TextView

        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Guide to only Defult sms app "
        android:textSize="27dp"
        android:textColor="@color/Blue_v1"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Press   @    to turns on  "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Press   #     to turns off"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Press    !     to get the latest status"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Press   n    first mode  "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:text="Press   m    Second mode  "
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>
